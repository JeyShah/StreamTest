{
  "manifest_version": 3,
  "name": "HLS Video Player",
  "version": "1.0.0",
  "description": "Cross-platform HLS stream video player - supports HLS, FLV, MP4 and other formats",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open HLS Video Player"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline' 'unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}